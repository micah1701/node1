# Server Configuration
PORT=3000
NODE_ENV=development
ENDPOINT_PREFIX=/api

# Database Configuration
# Set to 'mysql' or 'postgres'
DATABASE_TYPE=postgres

# Table prefix (example usages: empty for MySQL, 'myapp_' for Supabase)
TABLE_PREFIX=node1_

# MySQL Configuration (used when DATABASE_TYPE=mysql)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=api_db
DB_PORT=3306

# Supabase Configuration (used when DATABASE_TYPE=postgres)
SUPABASE_URL=your_supabase_url
SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key
SUPABASE_SCHEMA=public
SUPABASE_SECRET_KEY=your_supabase_secret_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Encryption Configuration
MASTER_ENCRYPTION_KEY=your_master_encryption_key_here

# Logging
LOG_LEVEL=info